---
import Toolbar from "../components/toolbar.astro";
import Footer from "../components/footer.astro";

import "../styles/globals.css";
import "../styles/style.css";
import "../styles/toolbar.css";
import "../styles/footer.css";

const { index = 1, title, desc="FTC 30380 Bitflip Robotics website" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title ? `${title} | Bitflip Robotics (30380)` : "Bitflip Robotics (30380)"}</title>
    {!index && <meta name="robots" content="noindex, nofollow"/>}
    <meta name="description" content={desc}>
    <meta name="keywords" content="ftc, FIRST, First, robotics, bitflip, 30380, ftc 30380, Bitflip robotics, ftc team, charleston robotics, SC Robotics, bitflip ftc">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    
    <slot name="head"></slot>
</head>
<body>
    <Toolbar></Toolbar>

    <main>
        <slot />
    </main>

    <Footer></Footer>   
</body>
</html>